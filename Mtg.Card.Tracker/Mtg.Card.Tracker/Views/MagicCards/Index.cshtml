@model IEnumerable<Mtg.Card.Tracker.Models.MagicCard>

@{
    ViewData["Title"] = "My Cards";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My Collection</h2>

<p>
    <a asp-action="Create">Add a Card!</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th width="5%">
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th width="5%">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th width="5%">
                @Html.DisplayNameFor(model => model.CardsAmount)
            </th>
            <th width="5%">
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th width="5%">
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th width="5%">
                @Html.DisplayNameFor(model => model.MultiverseId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td width="5%">

                <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" alt="mtg">
            </td>
            <td width="5%">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td width="5%">
                @Html.DisplayFor(modelItem => item.CardsAmount)
            </td>
            <td width="5%">
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td width="5%">
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td width="5%">
                @Html.DisplayFor(modelItem => item.MultiverseId)
            </td>
           
            <td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MagicCardId">Edit This Card</a> |
                <a asp-action="Details" asp-route-id="@item.MagicCardId">Card Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MagicCardId">Delete This Card</a>
            </td>
        </tr>
}
    </tbody>
</table>
