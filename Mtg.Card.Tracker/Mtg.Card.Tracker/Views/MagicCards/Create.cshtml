@model Mtg.Card.Tracker.Models.MagicCard

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<h4>MagicCard</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" id="cardName" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Power" class="control-label"></label>
                <input asp-for="Power" class="form-control" />
                <span asp-validation-for="Power" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Toughness" class="control-label"></label>
                <input asp-for="Toughness" class="form-control" />
                <span asp-validation-for="Toughness" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManaCost" class="control-label"></label>
                <input asp-for="ManaCost" class="form-control" />
                <span asp-validation-for="ManaCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MultiverseId" class="control-label"></label>
                <input asp-for="MultiverseId" class="form-control" />
                <span asp-validation-for="MultiverseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <br />
        <div class="label-primary"> Type in the card name under name and click here to search</div>
    </div>
    <div class="col-md-4">
        <br />
        <button id="CardButton" onclick="getCard()" type="button" class="btn btn-primary">Get Card Info</button>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>

    function getCard() {
       var cardName = document.getElementById("cardName").value;
        $.ajax({
            url: '/MagicCards/CardLookup',
            data: { 'name' : cardName},
            type: 'GET',
            success: function (html) {
                alert("Name: " + html.name + "       Color(s): " + html.colors +
                    "       Mana Cost: " + html.mana_cost + "       Price(in usd): " + html.usd + "      Multiverse Id: " + html.multiverse_ids);
            },
            error: function (error) {
                $(that).remove();
                DisplayError(error.statusText);
            }
        });
    }

   
       
</script>